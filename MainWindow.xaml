        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pomodoroTimer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label x:Name="TimeDisplayLabel" Content="00:00:00" HorizontalAlignment="Left" Margin="150,0,0,0" VerticalAlignment="Center" Height="212" Width="485" FontSize="72" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Button x:Name="TimerButton" Content="Start!" HorizontalAlignment="Left" Margin="373,366,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
